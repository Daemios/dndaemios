{
  "name": "Dungeons and Daemios",
  "author": "Michael Ryan",
  "version": "0.0.1",
  "description": "Dungeons and Daemios game module",
  "license": "Proprietary",
  "local": {
    "autoload": ["lib"],
    "css": [
      "css/dndaemios.components.min.css"
    ],
    "js": [
      "js/dndaemios.components.js"
    ]
  },
  "views": {
    "/welcome": {
      "entry": "views/welcome.html",
      "title": "Welcome",
      "js": ["js/welcome.js"],
      "css": ["css/welcome.min.css"],
      "navigable": false,
      "public": true,
      "hide_nav": false
    },
    "/character": {
      "entry": "views/character.html",
      "title": "Character Sheet",
      "nav_name": "Character",
      "js": ["js/character.js"],
      "css": ["css/character.min.css"],
      "public": true,
      "hide_nav": false
    },
    "/inventory": {
      "entry": "views/inventory.html",
      "title": "Inventory",
      "nav_name": "Inventory",
      "js": ["js/inventory.js"],
      "css": ["css/inventory.min.css"],
      "public": true,
      "hide_nav": false
    }
  },
  "apis": {
    "inventory.type.get": {
      "entry": "apis/inventory.type.get.api.php",
      "public": true
    },
    "inventory.get": {
      "entry": "apis/inventory.get.api.php",
      "public": true,
      "post": ["character_id"]
    },
    "inventory.add": {
      "entry": "apis/inventory.add.api.php",
      "public": true,
      "post": ["type", "name", "description", "quantity"]
    },
    "inventory.update": {
      "entry": "apis/inventory.update.api.php",
      "public": true,
      "post": ["item_id", "character_id", "type", "name", "description", "quantity"]
    },
    "inventory.delete": {
      "entry": "apis/inventory.delete.api.php",
      "public": true,
      "post": ["item_id"]
    }
  }
}